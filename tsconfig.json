{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "esnext",
    "target": "es5",
    "baseUrl": ".",
    "rootDir": "./src/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "build/app.js", 
    "src/**/*",
    "src/*"
  ],
  "exclude": [
    "node_modules",
  ]
}